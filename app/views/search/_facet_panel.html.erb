<div class="panel panel-<%= panel_type %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= label %></h3>
  </div>
  <div class="panel-body">
    <ul class="list-unstyled">
      <% results.each do |label, num| %>
        <li><%= link_to label, search_path(params.merge({:fqfield => facet_type, :fqtext => label})) %> <span class="badge"><%= num %></span></li>
      <% end %>
    </ul>
  </div>
</div>