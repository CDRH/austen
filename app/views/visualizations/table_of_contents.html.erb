<h2><%= @book["title"] %></h2>

<div class="row">
  <div class="col-md-6 col-md-push-6">

    <div class="view_chapter">
      <p>
        <%= link_to "View chapter by chapter visualization of text", visual_all_path(params["id"]) %>
        <span class="viz_warning">(warning: large page)</span>
      </p>
    </div>
    <p>Download XML: <%= link_to @book["xml"], xml_path(@book["xml"]) %> </p>
  </div>
  <div class="col-md-6 col-md-pull-6">

    <div class="table_of_contents">
      <%= generate_chapter_links(params["id"], @book["chapters"], @book["prelude"]).html_safe %>
    </div>
</div>



